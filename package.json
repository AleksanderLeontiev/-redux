    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js,*.ts": [
      "prettier --write",
      "eslint --cache --fix --ext .js,.ts"
    ],
    "*.{css,md}": "prettier --write"
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60
      }
    },
    "setupFiles": [
      "jest-localstorage-mock"
    ]
  }
