    "@babel/cli": "^7.13.0",
    "@types/jest": "^26.0.20",
    "browser-sync": "^2.26.14",
    "browser-sync-webpack-plugin": "^2.3.0",
    "css-loader": "^5.1.3",
    "eslint-plugin-prettier": "^3.3.1",
    "html-webpack-plugin": "^5.1.0",
    "husky": "^4.3.8",
